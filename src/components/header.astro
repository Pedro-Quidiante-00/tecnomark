---
import {Image} from "astro:assets";
import Logo from "../assets/image/general/logo.png"
import {fetchFromAPI} from "../lib/conections.ts";

interface ItemsMenu {
    label: string;
    url: string;
}

const menu: ItemsMenu[] = await fetchFromAPI('menunavs')
---
<header class=" bg-gray-950/50 flex w-full fixed text-white z-50 backdrop-blur-2xl">
    <div class="w-full flex justify-center items-center p-4 ">
        <a href="/">
        <Image
                src={Logo}
                alt="Logo"
                class="w-40 px-10 mx-10"/>
        </a>
        <nav class="flex gap-x-13">{menu.slice(0, 7).map(item => (
                <a
                        href={item.url}
                        class="hover:text-gray-300 transition-colors text-lg font-bold">
                    {item.label}
                </a>
        ))}
        </nav>
    </div>
</header>