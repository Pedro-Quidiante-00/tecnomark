---
import {fetchFromAPI} from '../lib/conections.ts';
const home = await fetchFromAPI('inicio');
---
<section class="relative top-0 h-[500px] md:h-[700px] text-white text-center z-10 w-full">
    <div class="relative w-full h-full">
        <img
                src={home.imagen.url}
                alt="teclado y mouse"
                class="absolute w-full h-full object-cover inset-0 "
        />
        <div class="absolute inset-0 bg-black/50"></div>
        <div class="container relative  justify-center mx-auto max-w-4xl h-full flex flex-col items-center text-center z-10 px-4">
            <h1 class="text-4xl md:text-6xl lg:text-8xl mb-5 font-extrabold">{home.titulo}</h1>
            <p class="text-lg md:text-2xl mb-10 max-w-2xl mx-auto">{home.subtitulo}</p>
        </div>
    </div>
</section>
