---
interface Props {titulo: string; subtitulo: string}
const { titulo, subtitulo } = Astro.props;
---

<section class="bg-gray-950 py-30 text-white">
    <div class="container mx-auto px-6 md:px-12 grid grid-cols-1 md:grid-cols-2 items-center">
        <div class="text-left">
            <h1 class="text-5xl md:text-6xl font-bold leading-none mb-6">
                {titulo}
            </h1>
            <p class="text-xl text-gray-100 pl-2">
                {subtitulo}
            </p>
        </div>
        <div class="hidden md:block">
        </div>

    </div>
</section>